{
  "compilerOptions": {
    "target": "ES2019",                          // Specify ECMAScript target version: ES2019
    "module": "commonjs",                        // Specify module code generation: commonjs
    "strict": true,                              // Enable all strict type-checking options
    "esModuleInterop": true,                     // Enables emit interoperability with ES modules
    "skipLibCheck": true,                        // Skip type checking of declaration files
    "outDir": "./dist",                          // Redirect output structure to the directory
    "rootDir": "./src",                          // Specify the root directory of input files
    "resolveJsonModule": true,                   // Include modules imported with .json extension
    "typeRoots": ["./node_modules/@types"],      // List of folders to include type definitions from
    "lib": ["es2019"],                           // Specify library files to be included in the compilation
    "baseUrl": "./",                             // Base directory to resolve non-absolute module names
    "paths": {                                   // Mapping for module resolution
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src"],                            // Include all .ts files within src directory
  "exclude": ["node_modules", "dist"]            // Exclude node_modules and dist directories
}
